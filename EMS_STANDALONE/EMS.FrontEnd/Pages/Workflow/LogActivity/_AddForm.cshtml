@model EMS.Workflow.Transfer.LogActivity.TagToApplicantForm

<div class="modal-header">
    <span id="spanLogActivity">Log Activity</span>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmLogActivity">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-right">
                        <div class="col-md-12">
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnGray formbtn\">Delete</button>")
                            }
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnGray formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSaveActivity" class="btnGray formbtn">Save</button>
                        </div>
                    </div>

                    <div id="divLogActivityErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="TagToApplicantForm.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3 col-label">
                                <label class="control-label block-label" for="ddlType"> <span class="reqField">* </span>Type</label>
                            </div>
                            <div class="col-md-4">
                                <select asp-items="@((List<SelectListItem>)ViewData["TypeSelectList"])" id="ddlType" class="form-control required-field" title="Type" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3 col-label">
                                <label class="control-label block-label" for="ddlTitle"> <span class="reqField">* </span>Title</label>
                            </div>
                            <div class="col-md-4">
                                <select asp-for="@Model.LogActivityID" name="TagToApplicantForm.LogActivityID" id="ddlTitle" class="form-control required-field" title="Title" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3 col-label">
                                <label class="control-label block-label" for="txtDescription"> <span class="unreqField">* </span>Description</label>
                            </div>
                            <div class="col-md-4">
                                <input id="txtDescription" class="form-control" title="Description" maxlength="255" disabled>
                            </div>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3 col-label">
                                <label class="control-label block-label" for="ddlStatus"> <span class="reqField">* </span>Status</label>
                            </div>
                            <div class="col-md-4">
                                <select asp-for="@Model.Status" name="TagToApplicantForm.Status" asp-items="@((List<SelectListItem>)ViewData["StatusSelectList"])" id="ddlStatus" class="form-control required-field" title="Status" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3 col-label">
                                <label class="control-label block-label" for="txtRemarks"> <span class="unreqField">* </span>Remarks</label>
                            </div>
                            <div class="col-md-5">
                                <textarea rows="3" cols="10" wrap="hard" asp-for="@Model.Remarks" name="TagToApplicantForm.Remarks" id="txtRemarks" class="form-control" maxlength="255" title="Remarks"></textarea>
                            </div>
                        </div>

                        <div id="divAssignUser" style="display:none">
                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtAssignedUser"> <span class="unreqField">* </span>Assigned User</label>
                                </div>
                                <div class="col-md-4">
                                    <input id="txtAssignedUser" class="form-control" title="Assigned User" maxlength="255" readonly>
                                    <input type="hidden" asp-for="@Model.AssignedUserID" name="TagToApplicantForm.AssignedUserID" id="hdnAssignedUserID" />
                                </div>
                            </div>

                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtDescription"> <span class="unreqField">* </span>Org Group</label>
                                </div>
                                <div class="col-md-4">
                                    <input id="txtDescription" class="form-control" title="Description" maxlength="255" readonly>
                                    <input type="hidden" asp-for="@Model.AssignedOrgGroupID" name="TagToApplicantForm.AssignedOrgGroupID" id="hdnAssignedOrgGroupID" />
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>
