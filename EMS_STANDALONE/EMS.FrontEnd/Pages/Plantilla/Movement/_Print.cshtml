@*NOTE: css defined on class doesn't work when printing, that's why css here is in-line.*@

<div id="divPrintMovement" style="display:none;width:100%">
    @*<center>
            <img style="height:50px;width:140px" src="~/images/MRFPrint/mnc logo.png" />
            <img style="height:50px;width:140px" src="~/images/MRFPrint/3x6 hpti logo.jpg" />
            <img style="height:50px;width:140px" src="~/images/MRFPrint/3x5 mti flag.jpg" />
            <img style="height:50px;width:140px" src="~/images/MRFPrint/CMC logo 2.png" />
        </center>
        <br>*@
    @{
        string tdLabelStyle = "font-family: Segoe UI;font-size: 11px;width:15%;padding:3px;border: 1px solid black;text-align: center; vertical-align: middle; background-color: #ededed; -webkit-print-color-adjust: exact;";
        //string tdValueStyleCenter = "font-family: Segoe UI;font-size: 13px;width:85%;border: 1px solid black;text-align: center; vertical-align: middle";
        string tdValueStyle = "font-family: Segoe UI;font-size: 11px;width:85%;border: 1px solid black;padding-left:20px; vertical-align: middle;"; 
        string empDataLabelStyle = "font-family: Segoe UI;font-size: 11px;width:25%;text-align: left; vertical-align: middle;";
        string empDataValueStyle = "font-family: Segoe UI;font-size: 11px;width:75%;text-align: left; vertical-align: middle;border-bottom: 1px solid black;";
        string approverStyle = "font-family: Segoe UI;font-size: 11px;width:66%;border-right: 1px solid black";
    }

    <center>
        <label style="font-family: Segoe UI;font-size: 20px;font-weight: bold;padding-bottom:30px;display: inherit">CONDUCT AND ABILITY REPORT</label>
    </center>
    <span style="font-family: Segoe UI;font-size: 11px; margin-left: 75%">CAR NUMBER: <span id="lblMovementID"></span></span>
    <table style="border-collapse: collapse;">
        <tr style="height: 50px;max-height: 50px;">
            <td style="@tdLabelStyle">COMPANY'S NAME</td>
            <td style="font-family: Segoe UI;font-size: 15px;border: 1px solid black;font-weight: bold;padding-left:20px; vertical-align: middle;text-align:center;" id="lblCompanyName"></td>
        </tr>
        <tr>
            <td style="@tdLabelStyle">EMPLOYEE DATA</td>
            <td style="@tdValueStyle">
                <div style="float:left;width:65%;border-right: 1px solid black; margin-bottom: -1px; margin-top: -1px">
                    <table style="width:95%;margin: 15px 0px 15px 0px">
                        <tr>
                            <td style="@empDataLabelStyle">New ID No.: </td>
                            <td style="@empDataValueStyle" id="lblNewIDNumber"></td>
                        </tr>
                        <tr>
                            <td style="@empDataLabelStyle">Old ID No.: </td>
                            <td style="@empDataValueStyle" id="lblIDNumber"></td>
                        </tr>
                        <tr>
                            <td style="@empDataLabelStyle">Name: </td>
                            <td style="@empDataValueStyle" id="lblEmployeeName"></td>
                        </tr>
                        <tr>
                            <td style="@empDataLabelStyle">Date Hired: </td>
                            <td style="@empDataValueStyle" id="lblDateHired"></td>
                        </tr>
                        <tr>
                            <td style="@empDataLabelStyle">Branch/Dept.: </td>
                            <td style="@empDataValueStyle" id="lblOrgGroup"></td>
                        </tr>
                        <tr>
                            <td style="@empDataLabelStyle">Job Title: </td>
                            <td style="@empDataValueStyle" id="lblPosition"></td>
                        </tr>

                    </table>
                </div>
                <div style="width:34%; float:left; padding-top: 120px;text-align:center">
                    <span style="border-top: 1px solid black;">&nbsp;&nbsp;&nbsp;&nbsp;EMPLOYEE SIGNATURE&nbsp;&nbsp;&nbsp;&nbsp;</span>
                </div>
            </td>
        </tr>
        <tr>
            <td style="@tdLabelStyle">REASON FOR THIS REPORT</td>
            <td style="@tdValueStyle; height: 100px">
                <div style="float:left;width:65%;border-right: 1px solid black; margin-bottom: -1px;
                    margin-top: -1px; min-height: 50px; vertical-align:middle; text-align: left; height: 100%;">
                    <div style="margin-top:40px;"><span id="lblReason"></span></div>
                </div>
                <div style="width:34%; float:left; text-align: center; vertical-align: middle; white-space:pre-line; height: 100%">
                    <span style="font-size: 11px;">Effective Date of Action</span><br />
                    <span id="lblDateEffectiveFrom"></span>
                </div>

            </td>
        </tr>
        <tr style="height: 50px;max-height: 50px;">
            <td style="@tdLabelStyle">TYPE OF ACTION</td>
            <td style="@tdValueStyle;white-space:pre-wrap;" id="lblMovementType"></td>
        </tr>
        <tr style="height: 220px;max-height: 220px;">
            <td style="@tdLabelStyle">DETAILS</td>
            <td style="@tdValueStyle">
                <div style="padding: 0px 20px 20px 0px;width:95%;font-family: Segoe UI;max-height: 160px;vertical-align:middle;" id="idDetails" hidden></div>
                <table style="padding: 20px 20px 20px 0px;width:95%;font-family: Segoe UI;font-size: 11px;" id="idDetailsTable">
                    @*margin:15px;*@
                    <tr>
                        <td style="width:15%;"></td>
                        <td style="width:33%; font-size: 11px; text-align: center;">From</td>
                        <td style="width:4%;"></td>
                        <td style="width:33%; font-size: 11px; text-align: center;">To</td>
                    </tr>
                    <tr>
                        <td style="width:15%;" id="idPosDetails">Job Title: </td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idPosDetailsFrom"></td>
                        <td style="width:4%;"></td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idPosDetailsTo"></td>
                    </tr>
                    <tr>
                        <td style="width:15%;">Basic: </td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idBasicDetailsFrom"></td>
                        <td style="width:4%;"></td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idBasicDetailsTo"></td>
                    </tr>
                    <tr>
                        <td style="width:15%;">Allowance: </td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idAllowanceDetailsFrom"></td>
                        <td style="width:4%;"></td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idAllowanceDetailsTo"></td>
                    </tr>
                    <tr>
                        <td style="width:15%;" id="idBrnDetails">Branch/Dept: </td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idBrnDetailsFrom"></td>
                        <td style="width:4%;"></td>
                        <td style="width:33%; font-size: 11px;border-bottom: 1px solid black; text-align: center;" id="idBrnDetailsTo"></td>
                    </tr>
                </table>

            </td>
        </tr>
        <tr style="height: 150px;max-height: 150px;">
            <td style="@tdLabelStyle">HRD DEPT.'S COMMENTS</td>
            <td style="@tdValueStyle;text-align:left;padding: 20px;"><span id="lblHRDComments"></span></td> @*white-space: pre-wrap;*@
        </tr>
        <tr>
            <td style="@tdLabelStyle">APPROVALS</td>
            <td style="@tdValueStyle;padding:0px">

                <table style="width:100%;height:150px;border-collapse: collapse;">
                    <tr>
                        <td style="height:50px;max-height:50px;width:auto;border-right: 1px solid black;border-bottom: 1px solid black;vertical-align:bottom;">
                            <table style="width:100%;font-family: Segoe UI;font-size: 11px;">
                                <tr>
                                    <td style="width:40%;">Regional Manager:</td>
                                    <td style="width:60%;font-size: 11px;"><span id="idRegionalManager"></span></td>
                                </tr>
                            </table>
                        </td>
                        @*<td style="@approverStyle;border-bottom: 1px solid black;"></td>*@
                        <td style="font-family: Segoe UI;font-size: 11px;width:150px;border-bottom: 1px solid black;text-align:left;vertical-align:bottom">DATE:</td>
                    </tr>
                    <tr>
                        <td style="font-family: Segoe UI;font-size: 11px;height:50px;max-height:50px;width:auto;border-right: 1px solid black;border-bottom: 1px solid black;text-align:left;vertical-align:bottom">
                            <table style="width:100%;font-family: Segoe UI;font-size: 11px;">
                                <tr>
                                    <td style="width:40%;">HRD Head:</td>
                                    <td style="width:60%;font-size: 11px;"><span id="idHrdManager"></span></td>
                                </tr>
                            </table>
                        </td>
                        @*<td style="@approverStyle;border-bottom: 1px solid black;"></td>*@
                        <td style="font-family: Segoe UI;font-size: 11px;width:150px;border-bottom: 1px solid black;text-align:left;vertical-align:bottom">DATE:</td>
                    </tr>
                    <tr>
                        <td style="font-family: Segoe UI;font-size: 11px;height:50px;max-height:50px;width:auto;border-right: 1px solid black;text-align:left;vertical-align:bottom">
                            <table style="width:100%;font-family: Segoe UI;font-size: 11px;">
                                <tr>
                                    <td style="width:40%;">President:</td>
                                    <td style="width:60%;font-size: 11px;"><span id="idCompanyPresident"></span></td>
                                </tr>
                            </table>
                        </td>
                        @*<td style="@approverStyle"></td>*@
                        <td style="font-family: Segoe UI;font-size: 11px;width:150px;text-align:left;vertical-align:bottom">DATE:</td>
                    </tr>

                </table>
            </td>
        </tr>
        <tr>
            <table style="width:100%; font-family:'Segoe UI'; font-size:11px;">
                <tr>
                    <td style="width:50%;">Date Generated:  <span id="lblDateGenerated"></span></td>
                    <td style="width:50%;">**Any erasures or corrections invalidates this report.**</td>
                </tr>
            </table>
        </tr>
        @*<tr>
            <td style="width:15%"></td>
            <td style="padding-top:30px;font-family:'Segoe UI'; font-size:13px; width:85%; text-align: left">
                Date Generated:  <span id="lblDateGenerated"></span>
            </td>
        </tr>*@

    </table>
    @*<span style="float:right;padding:50px 50px 0px 0px;"></span>*@
    <script>
        // Prevent tampering of Print Output
        var loop;
        function checkDevToolsIfOpen() {
            var minimalUserResponseInMiliseconds = 100;
            var before = new Date().getTime();
            if (document.getElementById("divPrintMovement").style.display != "none") {
                debugger;
            }
            var after = new Date().getTime();
            if (after - before > minimalUserResponseInMiliseconds) {
                // user had to resume the script manually via opened dev tools
                document.getElementById('divPrintMovement').innerHTML = 'Tampering with this document is not allowed.';
                clearTimeout(loop);
            }
            else {
                loop = setTimeout(function () { checkDevToolsIfOpen(); }, 1000);
            }
        }
        checkDevToolsIfOpen();
    </script>
</div>