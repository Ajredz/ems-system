@model Utilities.API.ReferenceMaintenance.ReferenceValue

<div class="modal-header">
    Reference
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <form method="post" id="frmAddReference">
            <div class="form-horizontal">
                <div class="form-group form-fields text-align-left">
                    <div class="col-md-12">
                        <button type="button" id="btnSaveReference" class="btnBlue formbtn">Save</button>
                    </div>
                </div>

                <div id="divReferenceErrorMessage" class="div-error-message"></div>
                <input type="hidden" asp-for="@Model.ID" name="ReferenceValue.ID" id="hdnID" />

                <div class="white-block">
                    <div class="col-label block-title">
                        <label class="control-label">Details</label>
                    </div>

                    <div class="form-group form-fields">
                        <div class="col-md-3 col-label">
                            <label class="control-label block-label" for="txtValue"> <span class="reqField">* </span>Code</label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="@Model.Value" type="text" name="ReferenceValue.Value" id="txtValue" maxlength="255" class="form-control required-field" title="Value" />
                        </div>
                    </div>
                    <div class="form-group form-fields">
                        <div class="col-md-3 col-label">
                            <label class="control-label block-label" for="txtDescription"> <span class="reqField">* </span>Description</label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="@Model.Description" type="text" name="ReferenceValue.Description" id="txtDescription" maxlength="255" class="form-control required-field" title="Description" />
                        </div>
                    </div>
                </div>
                <div class="white-block" id="divReferenceList">
                    <div class="col-label block-title">
                        <label class="control-label">List</label>
                    </div>

                    <div class="ViewList">
                        <table id="tblReferenceList"></table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>