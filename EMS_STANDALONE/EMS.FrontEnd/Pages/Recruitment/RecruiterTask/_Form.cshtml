@model EMS.Recruitment.Transfer.RecruiterTask.Form

<div class="modal-header">
    Task
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmRecruiterTask">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-12">
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnBlue formbtn\">Delete</button>")
                            }
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divRecruiterTaskErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="RecruiterTask.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtRecruiter"> <span class="reqField">* </span>Recruiter</label>
                            </div>
                            <div class="col-md-6">
                                <input id="txtRecruiter" class="form-control required-field" placeholder="Search.." title="Recruiter" readonly>
                                <input type="hidden" id="hdnRecruiterID" asp-for="@Model.RecruiterID" name="RecruiterTask.RecruiterID" />
                              @*<input type="text" asp-for="@Model.RecruiterID" name="RecruiterTask.RecruiterID" id="txtRecruiter" class="form-control required-field" title="Recruiter" value="" readonly>*@
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtApplicant"> <span class="reqField">* </span>Applicant</label>
                            </div>
                            <div class="col-md-6">
                                <input id="txtApplicant" class="form-control required-field" placeholder="Search.." title="Applicant" readonly>
                                <input type="hidden" id="hdnApplicantID" asp-for="@Model.ApplicantID" name="RecruiterTask.ApplicantID" />
                                @*<input type="text" asp-for="@Model.ApplicantID" name="RecruiterTask.ApplicantID" id="txtApplicant" class="form-control required-field" title="Applicant" value="" readonly>*@
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtDescription"> <span class="reqField">* </span>Description</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" asp-for="@Model.Description" name="RecruiterTask.Description" id="txtDescription" class="form-control required-field" title="Description" maxlength="255" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>