@model EMS.Workflow.Transfer.Workflow.Form

<div class="modal-header">
    Workflow
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmWorkflow">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-right">
                        <div class="col-md-12">
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnBlue formbtn\">Delete</button>")
                            }
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divWorkflowErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="Workflow.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtCode"> <span class="reqField">* </span>Code</label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" asp-for="@Model.Code" name="Workflow.Code" id="txtCode" class="form-control required-field" title="Code" maxlength="50" readonly>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtDescription"> <span class="reqField">* </span>Description</label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" asp-for="@Model.Description" name="Workflow.Description" id="txtDescription" class="form-control required-field" title="Description" maxlength="255" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Steps</label>
                        </div>
                        <div class="form-group form-fields display-flex">
                            <div class="col-md-1 dynamic-field-header">
                                <label class="control-label block-label">Order No.</label>
                            </div>
                            <div class="col-md-2 dynamic-field-header">
                                <label class="control-label block-label">Step Code</label>
                            </div>
                            <div class="col-md-2-5 dynamic-field-header">
                                <label class="control-label block-label">Step Description</label>
                            </div>
                            <div class="col-md-2 dynamic-field-header">
                                <label class="control-label block-label">Result Type</label>
                            </div>
                            <div class="col-md-1 dynamic-field-header">
                                <label class="control-label block-label">Is Required</label>
                            </div>
                            <div class="col-md-1 dynamic-field-header">
                                <label class="control-label block-label">Move Back If Failed</label>
                            </div>
                            <div class="col-md-1 dynamic-field-header">
                                <label class="control-label block-label">TAT (days)</label>
                            </div>
                            <div class="col-md-1 dynamic-field-header">
                                <label class="control-label block-label">Approvers</label>
                            </div>
                        </div>
                        <div id="DivWorkflowStepDynamicFields"></div>
                        <div class="form-group form-fields">
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2-5">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-0-5">
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2-5">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-0-5">
                                <span class="btn-glyph-dynamic glyphicon glyphicon-plus-sign" id="btnAddWorkflowStepFields"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>