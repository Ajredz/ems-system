@model EMS.Recruitment.Transfer.RecruiterTask.Form

<div class="modal-header">
    Pending Task
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmPendingTask">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-12">
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divPendingTaskErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="PendingTask.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtApplicant" id="lblApplicant">Applicant</label>
                            </div>
                            <div class="col-md-6">
                                <input id="txtApplicant" class="form-control" title="Applicant" readonly>
                                <input type="hidden" id="hdnApplicantID" asp-for="@Model.ApplicantID" name="PendingTask.ApplicantID" />
                                @*<input type="text" asp-for="@Model.ApplicantID" name="PendingTask.ApplicantID" id="txtApplicant" class="form-control required-field" title="Applicant" value="" readonly>*@
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtDescription" id="lblDescription">Description</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" asp-for="@Model.Description" name="PendingTask.Description" id="txtDescription" class="form-control" title="Description" readonly>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="ddlStatus"> <span class="reqField">* </span>Status</label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="@Model.Status" name="PendingTask.Status" id="ddlStatus" title="Status" asp-items="@((List<SelectListItem>)ViewData["StatusSelectList"])" class="form-control required-field" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2-5 col-label">
                                <label class="control-label block-label" for="txtRemarks">Remarks</label>
                            </div>
                            <div class="col-md-6">
                                @*<input type="text" asp-for="@Model.Remarks" name="RecruiterTask.Remarks" id="txtRemarks" class="form-control required-field" title="Remarks" readonly>*@
                                <textarea rows="7" cols="10" asp-for="@Model.Remarks" name="PendingTask.Remarks" id="txtRemarks" class="form-control" maxlength="255" readonly></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>