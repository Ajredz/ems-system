@model List<EMS_SecurityServiceModel.SystemURL.SystemURL>

    <label class="list-title"> My Accountabilities List </label>

<div id="divAccountabilityErrorMessage" class="div-error-message"></div>

<div id="filterFieldsContainer" style="display:none">
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterID" maxlength="255" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterEmployee" maxlength="255" class="form-control" />
        <div id="multiSelectedEmployee" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterSeparationFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterSeparationTo" maxlength="10" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterDateHiredFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterDateHiredTo" maxlength="10" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterTitle" maxlength="255" class="form-control" />
    </div>
    <div class="filterFields">
        <div class="dropdown">
            <div id="multiSelectedStatus" class="form-control multiselect-control" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </div>
            <div id="multiSelectedStatusOption" class="dropdown-menu form-control multiselect-itemlist">
            </div>
        </div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterStatusUpdatedDateFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterStatusUpdatedDateTo" maxlength="10" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterEmployeeOrg" maxlength="255" class="form-control" />
        <div id="multiSelectedEmployeeOrg" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterEmployeeOrgRegion" maxlength="255" class="form-control" />
        <div id="multiSelectedEmployeeOrgRegion" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterEmployeePos" maxlength="255" class="form-control" />
        <div id="multiSelectedEmployeePos" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields" id="divOrgGroupFilter">
        <input type="search" placeholder="Search.." id="txtFilterClearingOrg" maxlength="255" class="form-control" />
        <div id="multiSelectedClearingOrg" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields" id="divOrgGroupFilter">
        <input type="search" placeholder="Search.." id="txtFilterStatusUpdatedBy" maxlength="255" class="form-control" />
        <div id="multiSelectedStatusUpdatedBy" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterStatusRemarks" maxlength="255" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterLastComment" maxlength="255" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterLastCommentDateFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterLastCommentDateTo" maxlength="10" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterCreatedDateFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterCreatedDateTo" maxlength="10" class="form-control" />
    </div>
</div>

<div class="ViewList">
    <div class="ViewButtons">
        <span class="list-icon glyphicon glyphicon-export" title="Export List" id="btnExport"></span>
        <span class="list-icon glyphicon glyphicon-refresh" title="Reset List" id="btnReset"></span>
        <span class="list-icon glyphicon glyphicon-search" title="Search List" id="btnSearch"></span>
        @*<button type="button" id="btnExport" class="list-button btnBlue formbtn">Export</button>*@
        @if (ViewData["HasUploadFeature"] + "" == "true")
        {
            @Html.Raw("<button type=\"button\" id=\"btnUpload\" class=\"list-button btnBlue formbtn\">Upload</button>")
        }

        @if (ViewData["HasChangeStatus"] + "" == "true")
        {
            <button type="button" id="btnBulkChangeStatus" class="list-button btnBlue formbtn button-width-auto" hidden>Bulk Change Status</button>
        }
        @if (ViewData["HasDeleteFeature"] + "" == "true")
        {
            <button type="button" id="btnDeleteAccountability" class="list-button btnBlue formbtn">Delete</button>
        }
        @if (ViewData["HasExportExitInterview"] + "" == "true")
        {
            <button type="button" id="btnExportExitInterview" class="list-button btnBlue formbtn button-width-auto">Export Exit Interview</button>
        }
        <input type="hidden" id="hdnClearingHRBP" value="@(ViewData["ClearingHRBP"] + "")" />
    </div>
    <table id="tblMyAccountabilitiesList"></table>
    <div id="divPager"></div>
</div>

<script src="~/js/Pages/LogActivity/MyAccountabilities/Lists.js"></script>