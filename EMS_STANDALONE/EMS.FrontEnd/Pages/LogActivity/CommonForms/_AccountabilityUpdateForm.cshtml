                    <div class="white-block">

                        <div class="tab">
                            <button class="tablinks" onclick="return objEMSCommonJS.ChangeTab(this,'tabHistory', '#divAccountabilityModal')">
                                <span class="control-label">History</span>
                            </button>
                            <button class="tablinks" onclick="return objEMSCommonJS.ChangeTab(this,'tabComment', '#divAccountabilityModal')">
                                <span class="control-label">Comment</span>
                            </button>
                            <button class="tablinks" onclick="return objEMSCommonJS.ChangeTab(this,'tabAttachment', '#divAccountabilityModal')">
                                <span class="control-label">Attachment</span>
                            </button>
                            <button class="tablinks" onclick="return objEMSCommonJS.ChangeTab(this,'tabMovement', '#divAccountabilityModal')" hidden>
                                <span class="control-label">Movement</span>
                            </button>
                        </div>

                        <partial name="~/Pages/LogActivity/CommonForms/_AccountabilityCommentSection.cshtml" />
                        <partial name="~/Pages/LogActivity/CommonForms/_AccountabilityAttachmentSection.cshtml" />

                        <div class="tabcontent" id="tabHistory">
                            <div class="ViewList">
                                <table id="tblAccountabilityStatusHistoryList"></table>
                            </div>
                        </div>
                        <div class="tabcontent" id="tabMovement">
                            <div class="ViewList">
