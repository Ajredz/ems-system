@model EMS.Workflow.Transfer.Accountability.EmployeeAccountabilityForm


<div class="modal-header">
    <span id="spanAccountability">Accountability</span>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmAccountability">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-4">
                            @if (ViewData["HasEdit"] + "" == "true")
                            {
                                <button type="button" style="display:none" id="btnEditAccountability" class="btnBlue formbtn">Edit</button>
                                <button type="button" style="display:none" id="btnSaveAccountability" class="btnBlue formbtn">Save</button>
                                <button type="button" style="display:none" id="btnBackAccountability" class="btnBlue formbtn">Back</button>
                            }
                            @if (ViewData["HasChangeStatus"] + "" == "true")
                            {
                                <button type="button" id="btnChangeStatus" class="btnBlue formbtn button-width-auto">Change Status</button>
                            }
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                <button type="button" id="btnDeleteThisAccountability" class="btnBlue formbtn">Delete</button>
                            }
                        </div>
                    </div>

                    <div id="divAccountabilityErrorMessage" class="div-error-message"></div>
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-12 text-align-left list-header">
                            @*<label id="lblHeaderType"></label> |*@
                            <label>@Model.Title</label> |
                            <label>@("" + ViewData["EmployeeName"])</label> |
                            <label>@("" + ViewData["CurrentStatusDescription"])</label>
                        </div>
                    </div>

                    <div id="ChangeStatusModal" hidden>
                        <div class="white-block ChangeStatusStyle">
                            <partial name="~/Pages/Shared/_ChangeStatus.cshtml" />
                        </div>
                    </div>

                    <input type="hidden" asp-for="@Model.ID" name="EmployeeAccountabilityForm.ID" id="hdnEmployeeAccountabilityID" />
                    <input type="hidden" asp-for="@Model.EmployeeID" name="EmployeeAccountabilityForm.EmployeeID" />
                    <input id="hdnStatus" type="hidden" asp-for="@Model.Status" name="EmployeeAccountabilityForm.CurrentStatus" />
                    <input id="hdnTitle" type="hidden" asp-for="@Model.Title"/>

                    
                    <div class="white-block">

                        <div class="tabform">
                            <button class="tablinksform" onclick="return objEMSCommonJS.ChangeTabForm(this,'tabAccountability', '#divAccountabilityModal')">
                                <span class="control-label">Accountability</span>
                            </button>
                            @if (Model.Title.Equals("HR – TALENT MANAGEMENT - Exit Interview"))
                            {
                                <button class="tablinksform" onclick="return objEMSCommonJS.ChangeTabForm(this,'tabExitInterview', '#divAccountabilityModal')">
                                    <span class="control-label">Exit Questionnaire</span>
                                </button>
                            }
                        </div>

                        <div class="tabcontentform" id="tabAccountability">
                            @if ((ViewData["EmployeeName"] + "") != "")
                            {
                                <div class="form-group form-fields">
                                    <div class="col-md-3 col-label">
                                        <label class="control-label block-label"> <span class="unreqField">* </span>Employee Name</label>
                                    </div>
                                    <div class="col-md-7">
                                        <label class="control-label block-label">@(ViewData["EmployeeName"] + "")</label>
                                    </div>
                                </div>
                            }
                            @if ((ViewData["EmployeeOrg"] + "") != "")
                            {
                                <div class="form-group form-fields">
                                    <div class="col-md-3 col-label">
                                        <label class="control-label block-label"> <span class="unreqField">* </span>Employee OrgGroup</label>
                                    </div>
                                    <div class="col-md-7">
                                        <label class="control-label block-label">@(ViewData["EmployeeOrg"] + "")</label>
                                    </div>
                                </div>
                            }
                            @if ((ViewData["EmployeePosition"] + "") != "")
                            {
                                <div class="form-group form-fields">
                                    <div class="col-md-3 col-label">
                                        <label class="control-label block-label"> <span class="unreqField">* </span>Employee Position</label>
                                    </div>
                                    <div class="col-md-7">
                                        <label class="control-label block-label">@(ViewData["EmployeePosition"] + "")</label>
                                    </div>
                                </div>
                            }
                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="ddlType"> <span class="reqField">* </span>Type</label>
                                </div>
                                <div class="col-md-7">
                                    <select asp-for="@Model.Type" name="EmployeeAccountabilityForm.Type" asp-items="@((List<SelectListItem>)ViewData["TypeSelectList"])" id="ddlType" class="form-control required-field" title="Type" readonly>
                                        <option value="">- Select an item -</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtTitle"> <span class="reqField">* </span>Title</label>
                                </div>
                                <div class="col-md-7">
                                    <input asp-for="@Model.Title" name="EmployeeAccountabilityForm.Title" id="txtTitle" class="form-control required-field" title="Title" maxlength="100" readonly>
                                </div>
                            </div>

                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtDescription">Description</label>
                                </div>
                                <div class="col-md-7">
                                    <textarea rows="3" cols="10" wrap="hard" asp-for="@Model.Description" name="EmployeeAccountabilityForm.Description" id="txtDescription" class="form-control" maxlength="255" title="Description" readonly></textarea>
                                </div>
                            </div>

                            <div class="form-group form-fields">
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtOrgGroup"> <span class="unreqField">* </span>Clearing Org Group</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="search" placeholder="Search.." asp-for="@Model.OrgGroupDescription" id="txtOrgGroup" class="form-control required-field" title="Org Group" maxlength="300" readonly>
                                    <input type="hidden" id="hdnOrgGroup" class="OrgGroupDynamicFields" asp-for="@Model.OrgGroupID" name="EmployeeAccountabilityForm.OrgGroupID">
                                </div>
                            </div>

                            <div class="form-group form-fields ShowIntangible" hidden>
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtPosition"> <span class="unreqField">* </span>Clearing Position</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="search" placeholder="Search.." asp-for="@Model.PositionDescription" id="txtPosition" class="form-control" title="Position" maxlength="300" readonly>
                                    <input type="hidden" id="hdnPosition" class="PositionDynamicFields" asp-for="@Model.PositionID" name="EmployeeAccountabilityForm.PositionID">
                                </div>
                            </div>

                            <div class="form-group form-fields ShowIntangible" hidden>
                                <div class="col-md-3 col-label">
                                    <label class="control-label block-label" for="txtEmployee"> <span class="unreqField">* </span>Clearing Employee</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="search" placeholder="Search.." asp-for="@Model.ApproverEmployeeName" id="txtEmployee" class="form-control" title="Employee" maxlength="300" readonly>
                                    <input type="hidden" id="hdnEmployee" class="EmployeeDynamicFields" asp-for="@Model.ApproverEmployeeID" name="EmployeeAccountabilityForm.ApproverEmployeeID">
                                </div>
                            </div>

                        </div>

                        <div class="tabcontentform" id="tabExitInterview">
                            <div class="ResizableForm" id="divDisplayQuestion">
                                
                            </div>
                        </div>

                    </div>
