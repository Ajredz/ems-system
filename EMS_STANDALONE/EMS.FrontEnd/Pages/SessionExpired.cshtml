@page
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] EMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/jqGrid.Modified.min.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-1.10.2.min.js"></script>
    <script src="~/lib/jquery-ui-1.10.0.min.js"></script>
    <script src="~/lib/modernizr-2.6.2.min.js"></script>
    <script src="~/js/Messages.min.js"></script>
    <script src="~/js/Common.min.js"></script>
    <script src="~/lib/respond.min.js"></script>
    <script src="~/lib/anseki-jquery-plainoverlay/jquery.plainoverlay.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/jqGrid.Custom.min.css" rel="stylesheet" />

</head>
<body>

    <div class="container body-content">
        <div style="display: block; margin: auto;width: 40%;">
            <h3 class="text-align-center">Your session has expired.</h3>
            <div class="text-align-center">
                <span>Redirecting to Login page in </span><span id="countdown">5</span><span>..</span>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var count = 6;
            var counter = setInterval(timer, 1000); //1000 will  run it every 1 second
            function timer() {
                count = count - 1;
                if (count <= 0) {
                    clearInterval(counter);
                    //counter ended, do something here
                    window.location.href = "/Login";
                    return;
                }
                //Do code for showing the number of seconds here
                $("#countdown").text("0" + count);
            }
            timer();
        });
    </script>
</body>
</html>

