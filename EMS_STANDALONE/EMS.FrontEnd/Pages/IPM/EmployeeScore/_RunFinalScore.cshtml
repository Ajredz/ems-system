
<div class="modal-header">
    Run Employee Final Score
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <form method="post" onsubmit="return false" id="frmRunEmployeeFinalScore">
            <div class="form-group form-fields text-align-left">
                <div class="col-md-12">
                    <button type="button" id="btnRunFinalScoreAdd" class="btnBlue formbtn">Run</button>
                </div>
            </div>

            <div id="divEmployeeFinalScoreErrorMessage" class="div-error-message"></div>

            <div class="form-group form-fields">
                <div class="col-md-3 col-label">
                    <label class="control-label block-label" for="ddlRunID">Run ID</label>
                </div>
                <div class="col-md-9">
                    <select id="ddlRunID" class="form-control required-field" title="Run ID">
                    </select>
                </div>

            </div>


            <div id="divTransProgress" hidden>
                <div class="form-group form-fields no-margin-bottom">
                    <div class="col-md-12 col-label">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="0"
                                 aria-valuemin="0" aria-valuemax="100" style="width:0%" id="progressbar">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-fields no-margin-top">
                    <div class="col-md-12 col-label text-align-center">
                        <label class="control-label block-label" id="lblProgressDetails">
                        </label>
                    </div>
                </div>

                <div id="divOnGoingOverlay">
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal-footer">
</div>
