@model EMS.IPM.Transfer.EmployeeScore.BatchEmployeesScoreForm

    <div class="modal-header">
        Batch Update
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <br>
        <div class="white-block mt-20">
            <div class="col-label block-title">
                <label class="control-label">MULTIPLE TAGGING</label>
            </div>
                <div class="form-group form-fields form-horizontal">
                    <form method="post" onsubmit="return false" id="frmBatchEmployeeScore">
                        <div id="divBatchEmployeeScoreErrorMessage" class="div-error-message"></div>
                        <input type="hidden" id="hdnID" />
                        <div class="form-horizontal">
                            <div class="form-group form-fields">
                                <div class="col-md-2-5 col-label">
                                    <label class="control-label block-label" for="txtRemarks">Status</label>
                                </div>
                                <div class="col-md-9">
                                    <select id="ddlUpdateStatus" title="Status" class="form-control required-field"></select>
                                </div>
                            </div>
                            <div class="form-group form-fields">
                                <div class="col-md-2-5 col-label">
                                    <label class="control-label block-label" for="txtRemarks">Remarks</label>
                                </div>
                                <div class="col-md-9">
                                    <textarea rows="5" cols="10" id="txtRemarksMultiple" class="form-control" maxlength="255"></textarea>
                                </div>
                            </div>
                            <div class="form-group form-fields text-align-right">
                                <div class="col-md-12">
                                    <button type="button" id="btnSave" class="btnBlue formbtn">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>