@model EMS.IPM.Transfer.KPI.Form

<div class="modal-header">
    Key Performance Indicator
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmKPI">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-12">
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnBlue formbtn\">Delete</button>")
                            }
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divKPIErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="KPI.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="ddlKRAGroup"> <span class="reqField">* </span>KRA Group</label>
                            </div>
                            <div class="col-md-7">
                                <select asp-for="@Model.KRAGroup" name="KPI.KRAGroup" asp-items="@((List<SelectListItem>)ViewData["KRAGroupSelectList"])" id="ddlKRAGroup" class="form-control required-field" title="KRA Group" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <button type="button" id="btnAddKRAGroup" style="width: 42px; height: 22px;" class="btnBlue formbtn">
                                    <span class="fa fa-plus-circle"></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="ddlKRASubGroup"> <span class="unreqField">* </span>KRA Sub Group</label>
                            </div>
                            <div class="col-md-7">
                                <select asp-for="@Model.KRASubGroup" name="KPI.KRASubGroup" asp-items="@((List<SelectListItem>)ViewData["KRASubGroupSelectList"])" id="ddlKRASubGroup" class="form-control" title="KRA Sub Group" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <button type="button" id="btnAddKRASubGroup" style="width: 42px; height: 22px;" class="btnBlue formbtn">
                                    <span class="fa fa-plus-circle"></span>
                                </button>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="txtCode"> <span class="reqField">* </span>Old Code</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="@Model.OldKPICode" name="KPI.OldKPICode" id="txtCode" class="form-control required-field" title="Old Code" maxlength="50" readonly>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="txtName"> <span class="reqField">* </span>Name</label>
                            </div>
                            <div class="col-md-8">
                                <textarea asp-for="@Model.Name" name="KPI.Name" id="txtName" class="form-control required-field" title="Name" maxlength="255" readonly>
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="txtDescription"> <span class="reqField">* </span>Description</label>
                            </div>
                            <div class="col-md-8">
                                <textarea asp-for="@Model.Description" name="KPI.Description" id="txtDescription" class="form-control required-field" title="Description" maxlength="255" readonly>
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="txtTargetGuidelines"> <span class="reqField">* </span>Target Guidelines</label>
                            </div>
                            <div class="col-md-8">
                                <textarea asp-for="@Model.TargetGuidelines" name="KPI.TargetGuidelines" id="txtTargetGuidelines" class="form-control required-field" title="Target Guidelines" maxlength="255" readonly>
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="ddlKPIType"> <span class="reqField">* </span>KPI Type</label>
                            </div>
                            <div class="col-md-7">
                                <select asp-for="@Model.Type" name="KPI.Type" asp-items="@((List<SelectListItem>)ViewData["KPITypeSelectList"])" id="ddlKPIType" class="form-control required-field" title="KPI Type" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-4 col-label">
                                <label class="control-label block-label" for="ddlSourceType"> <span class="reqField">* </span>Source Type</label>
                            </div>
                            <div class="col-md-7">
                                <select asp-for="@Model.SourceType" name="KPI.SourceType" asp-items="@((List<SelectListItem>)ViewData["KPISourceTypeSelectList"])" id="ddlSourceType" class="form-control required-field" title="Source Type" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>
