@model List<EMS_SecurityServiceModel.SystemURL.SystemURL>

<label class="list-title"> KPI Score List </label>

<div id="filterFieldsContainer" style="display:none">
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterID" maxlength="8" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterPeriodFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterPeriodTo" maxlength="10" class="form-control" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterName" maxlength="255" class="form-control" />
        <div id="multiSelectedName" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterOrgGroup" maxlength="255" class="form-control" />
        <div id="multiSelectedOrgGroup" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterKPI" maxlength="255" class="form-control" />
        <div id="multiSelectedKPI" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterTarget" maxlength="8" class="form-control text-amount" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterActual" maxlength="8" class="form-control text-amount" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterRate" maxlength="8" class="form-control text-amount" />
    </div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterParentOrgGroup" maxlength="255" class="form-control" />
    </div>
</div>

<div class="ViewList no-margin-top">
    <div class="form-horizontal filter-control show-checkbox">
        <label class="control-label filter-control block-label">KPI Type </label>
        <select id="ddlKPIType" title="KPI Type">
            <option value="QUANTITATIVE">QUANTITATIVE (per Org Group)</option>
            <option value="QUALITATIVE">QUALITATIVE (per Employee)</option>
        </select>
    </div>
    <div class="ViewButtons">
        <span class="list-icon glyphicon glyphicon-export" title="Export List" id="btnExport"></span>
        <span class="list-icon glyphicon glyphicon-refresh" title="Reset List" id="btnReset"></span>
        <span class="list-icon glyphicon glyphicon-search" title="Search List" id="btnSearch"></span>
        @if (ViewData["HasAddFeature"] + "" == "true")
        {
            @Html.Raw("<button type=\"button\" id=\"btnAdd\" class=\"list-button btnBlue formbtn\">Add</button>")
        }
        @if (ViewData["HasUploadFeature"] + "" == "true")
        {
            @Html.Raw("<button type=\"button\" id=\"btnUploadScores\" class=\"list-button btnBlue formbtn button-width-auto\">Upload Scores</button>")
        }
        @*<button type="button" id="btnExport" class="list-button btnBlue formbtn">Export</button>*@
    </div>
    <table id="tblIPMKPIScoreList"></table>
    <div id="divPager"></div>
</div>

@*<script src="~/js/Pages/_EMSCommon.min.js"></script>*@
<script src="~/js/Pages/IPM/KPIScore/Lists.js"></script>