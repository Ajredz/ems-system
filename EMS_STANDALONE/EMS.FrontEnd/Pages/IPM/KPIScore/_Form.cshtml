@model EMS.IPM.Transfer.KPIScore.Form

<div class="modal-header">
    KPI Score
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmKPIScore">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-right">
                        <div class="col-md-12">
                            @if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnBlue formbtn\">Delete</button>")
                            }
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divKPIScoreErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.OrgGroup" id="hdnOrgID" />

                    <script>
                        var KPIPositionList = @Html.Raw(Json.Serialize(ViewData["KPIPositionList"]));
                        var KPIScoreList = @Html.Raw(Json.Serialize(Model.KPIScoreList));
                    </script>

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            @if ((ViewData["KPIType"] + "").Equals("QUANTITATIVE"))
                            {
                                <div class="col-md-4 col-label">
                                    <label class="control-label block-label"> <span class="unreqField">* </span>Organizational Group</label>
                                </div>
                                <div class="col-md-4">
                                    @*<select asp-for="@Model.OrgGroup" name="KPIScore.OrgGroup" asp-items="@((List<SelectListItem>)ViewData["OrgGroupSelectList"])" id="ddlOrgGroup" class="form-control required-field" title="Organization Group" readonly>
                                        <option value="">- Select an item -</option>
                                    </select>*@
                                    <input type="text" value="@(ViewData["OrgGroupDescription"] + "")" class="form-control required-field" title="Organizational Group" disabled />
                                </div>
                            }
                            else
                            {
                                <div class="col-md-4 col-label">
                                    <label class="control-label block-label"> <span class="unreqField">* </span>Employee</label>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" value="@(ViewData["EmployeeName"] + "")" class="form-control required-field" title="Employee" disabled />
                                </div>
                            }
                        </div>
                    </div>

                    <div class="white-block">
                        <partial name="~/Pages/IPM/KPIScore/_Score.cshtml" model="Model.KPIScoreList" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>
