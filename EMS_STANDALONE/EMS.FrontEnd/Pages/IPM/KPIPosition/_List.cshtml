@model List<EMS_SecurityServiceModel.SystemURL.SystemURL>

<label class="list-title"> KPI per Position List </label>

<div id="filterFieldsContainer" style="display:none">
    <div class="filterFields"><input type="search" placeholder="Search.." id="txtFilterID" maxlength="8" class="form-control" /></div>
    <div class="filterFields">
        <input type="search" placeholder="Search.." id="txtFilterPosition" maxlength="255" class="form-control" />
        <div id="multiSelectedPosition" class="form-control multiselect-control"></div>
    </div>
    <div class="filterFields"><input type="search" placeholder="Search.." id="txtFilterWeight" maxlength="8" class="form-control" /></div>
    <div class="filterFields">
        <input type="search" placeholder="From" id="txtFilterDateEffectiveFrom" maxlength="10" class="form-control" />
        <input type="search" placeholder="To" id="txtFilterDateEffectiveTo" maxlength="10" class="form-control" />
    </div>
</div>

<div class="ViewList">
    <div class="ViewButtons">
        <span class="list-icon glyphicon glyphicon-export" title="Export List" id="btnExport"></span>
        <span class="list-icon glyphicon glyphicon-refresh" title="Reset List" id="btnReset"></span>
        <span class="list-icon glyphicon glyphicon-search" title="Search List" id="btnSearch"></span>
        @if (ViewData["HasAddFeature"] + "" == "true")
        {
            @Html.Raw("<button type=\"button\" id=\"btnAdd\" class=\"list-button btnBlue formbtn\">Add</button>")
        }
        @if (ViewData["HasUploadInsertFeature"] + "" == "true")
        {
            @Html.Raw("<button type=\"button\" id=\"btnUploadInsert\" class=\"list-button btnBlue formbtn\">Upload</button>")
        }
        @*<button type="button" id="btnExport" class="list-button btnBlue formbtn">Export</button>*@

        <div class="form-horizontal filter-control">
            <label class="control-label filter-control block-label" for="cbShowRecentOnly"> <span class="unreqField">* </span>Show Recent Only</label>
            <input type="checkbox" id="cbShowRecentOnly" class="form-control filter-control" title="Show Recent Only">
        </div>

    </div>
    <table id="tblIPMKPIPositionList"></table>
    <div id="divPager"></div>
</div>

@*<script src="~/js/Pages/_EMSCommon.min.js"></script>*@
<script src="~/js/Pages/IPM/KPIPosition/Lists.js"></script>
    <script src="~/js/Pages/IPM/KPIPosition/UploadInsert.js"></script>