@page

@model EMS.FrontEnd.Pages.Manpower.MRFApproval.IndexModel
@{
  ViewData["Title"] = "MRFApproval";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

@* MRFApproval Modal *@
<div id="divMRFApprovalModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" style="width:80%">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div id="divMRFApprovalBodyModal"></div>
    </div>
  </div>
</div>
@* End of MRFApproval Modal *@

@* MRF Remarks Modal *@
<div id="divMRFRemarksModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" style="width:30%">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div id="divMRFRemarksHeaderModal" class="modal-header">
          Approval Remarks
          <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div id="divMRFRemarksBodyModal" class="modal-body">
          <div class="form-horizontal">
            <div id="divApproverRemarks"></div>
            <div id="divMRFRemarksErrorMessage" class="div-error-message"></div>
            <div class="form-group form-fields">
              <div class="col-md-12">
                <textarea rows="3" cols="10" wrap="hard" id="txtApprovalRemarks" class="form-control required-field" maxlength="255" title="Remarks / Justification"></textarea>
              </div>
            </div>
            <div class="form-group form-fields">
              <div class="col-md-12 text-align-right">
                <button type="button" id="btnProceed" class="list-button btnBlue formbtn">Proceed</button>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
@* End of MRF Remarks Modal *@

@await Html.PartialAsync("~/Pages/Manpower/MRFApproval/_List.cshtml", Model._systemURL)
