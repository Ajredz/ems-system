@model EMS.Plantilla.Transfer.Employee.NewEmployeeForm


<div class="modal-header">
    New Employee Details
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body modal-body-fixed-height">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmNewEmployee">
                <div class="form-horizontal">

                    <div class="form-group form-fields">
                        <div class="col-md-4 text-align-left">
                            <button type="button" id="btnSaveNewEmployee" class="btnBlue formbtn">Save</button>
                        </div>
                    </div>

                    <div class="form-group form-fields">
                        <div class="col-md-12 text-align-left list-header">
                           @ViewData["title"]
                        </div>
                    </div>

                    <div id="divEmployeeErrorMessage" class="div-error-message"></div>
                    <input type="text" value="@Model.ID" name="Employee.ID" hidden/>
                    
                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        
                        <div class="form-group form-fields">
                            <div class="col-md-3-5 col-label">
                                <label class="control-label block-label" for="ddlCompany"> <span class="unreqField">* </span>Company</label>
                            </div>
                            <div class="col-md-7">
                                <select name="Employee.CompanyTag" asp-items="@((List<SelectListItem>)ViewData["CompanyTagSelectList"])" id="ddlCompany" class="form-control required-field" title="Company" readonly>
                                    <option value="">- Select an item -</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group form-fields">
                            <div class="col-md-3-5 col-label">
                                <label class="control-label block-label" for="txtOldEmployeeID"> <span class="unreqField">* </span>Old Employee ID</label>
                            </div>
                            <div class="col-md-7">
                                <input name="Employee.OldEmployeeID" id="txtOldEmployeeID" class="form-control required-field" title="Old Employee ID" maxlength="10" readonly>
                            </div>
                        </div>

                        <div class="form-group form-fields">
                            <div class="col-md-3-5 col-label">
                                <label class="control-label block-label" for="txtEmail"> <span class="unreqField">* </span>Email</label>
                            </div>
                            <div class="col-md-7">
                                <input name="Employee.Email" id="txtEmail" class="form-control required-field" title="Email" maxlength="10" readonly>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>