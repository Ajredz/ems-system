@model EMS.Security.Transfer.SystemUser.Form

<div class="modal-header">
    System User
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group form-fields">
            <form method="post" onsubmit="return false" id="frmSystemUser">
                <div class="form-horizontal">
                    <div class="form-group form-fields text-align-left">
                        <div class="col-md-12">
                            @*@if (ViewData["HasDeleteFeature"] + "" == "true")
                            {
                                @Html.Raw("<button type=\"button\" id=\"btnDelete\" class=\"btnBlue formbtn\">Delete</button>")
                            }*@
                            @if (ViewData["HasEditFeature"] + "" == "true")
                            {
                                @Html.Raw("&nbsp;<button type=\"button\" id=\"btnEdit\" class=\"btnBlue formbtn\">Edit</button>")
                            }
                            <button type="button" style="display:none" id="btnSave" class="btnBlue formbtn">Save</button>
                            <button type="button" style="display:none" id="btnBack" class="btnBlue formbtn">Back</button>
                        </div>
                    </div>

                    <div id="divSystemUserErrorMessage" class="div-error-message"></div>
                    <input type="hidden" asp-for="@Model.ID" name="SystemUser.ID" id="hdnID" />

                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Details</label>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2 col-label">
                                <label class="control-label block-label" for="txtUserName"> <span class="reqField">* </span>Username </label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" asp-for="@Model.Username" name="SystemUser.Username" id="txtUsername" class="form-control required-field" title="Username" maxlength="50" readonly>
                            </div>
                        </div>
                        <div class="form-group form-fields no-margin-bottom">
                            <div class="col-md-2 col-label">
                                <label class="control-label block-label" for="txtLastName"> <span class="reqField">* </span>Name</label>
                            </div>
                            <div class="col-md-3">
                                <input asp-for="@Model.LastName" type="text" name="SystemUser.LastName" id="txtLastName" maxlength="50" class="form-control required-field" title="Last Name" readonly />
                            </div>
                            <div class="col-md-3">
                                <input asp-for="@Model.FirstName" type="text" name="SystemUser.FirstName" id="txtFirstName" maxlength="50" class="form-control required-field" title="First Name" readonly />
                            </div>
                            <div class="col-md-3">
                                <input asp-for="@Model.MiddleName" type="text" name="SystemUser.MiddleName" id="txtMiddleName" maxlength="50" class="form-control required-field" title="Middle Name" readonly />
                            </div>
                        </div>
                        <div class="form-group form-fields no-margin-top">
                            <div class="col-md-2 col-label">
                            </div>
                            <div class="col-md-3 text-align-left" for="txtLastName">
                                <label class="control-label block-label"> <span class="unreqField">* </span>Last Name</label>
                            </div>
                            <div class="col-md-3 text-align-left" for="txtFirstName">
                                <label class="control-label block-label"> <span class="unreqField">* </span>First Name</label>
                            </div>
                            <div class="col-md-3 text-align-left" for="txtMiddleName">
                                <label class="control-label block-label"> <span class="unreqField">* </span>Middle Name</label>
                            </div>
                        </div>
                        <div class="form-group form-fields">
                            <div class="col-md-2 col-label">
                                <label class="control-label block-label" for="cbIsActive"> <span class="reqField">* </span>Is Active?</label>
                            </div>
                            <div class="col-md-5">
                                <input type="checkbox" name="SystemUser.IsActive" asp-for="@Model.IsActive" id="cbIsActive" title="Is Active?">
                            </div>
                        </div>
                    </div>
                    <div class="white-block">
                        <div class="col-label block-title">
                            <label class="control-label">Roles</label>
                        </div>
                        <div class="form-group form-fields display-flex">
                            <div class="col-md-5">
                                <br />
                                <input type="text" id="txtSearchBoxOne" class="form-control listbox" placeholder="Search here..." />
                                <select id="ddlListOneOrgGroup" class="form-control listbox" size="10"></select>
                            </div>
                            <div class="col-md-2 text-align-center listboxbutton">
                                <br />
                                <br />
                                <button type="button" id="btnMoveToListTwoAll" class="btnBlue formbtn btn-transfer">>></button><br />
                                <button type="button" id="btnMoveToListTwo" class="btnBlue formbtn btn-transfer">></button><br />
                                <button type="button" id="btnMoveToListOne" class="btnBlue formbtn btn-transfer"><</button><br />
                                <button type="button" id="btnMoveToListOneAll" class="btnBlue formbtn btn-transfer"><<</button><br />
                            </div>
                            <div class="col-md-5">
                                <br />
                                <input type="text" id="txtSearchBoxTwo" class="form-control listbox" placeholder="Search here..." />
                                <select id="ddlListTwoOrgGroup" class="form-control listbox" size="10" title="System User"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
</div>


